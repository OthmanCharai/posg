{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./resources/*"],
      "@utils/*": ["./resources/src/utils/*"],
      "@pages/*": ["./resources/src/pages/*"],
      "@common/*": ["./resources/src/common/*"],
      "@store/*": ["./resources/src/store/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.vue"],
  "exclude": [
    "node_modules",
    "public"
  ]
}
